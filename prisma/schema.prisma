generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TIPE_SOAL {
  PILIHAN_GANDA
  ISIAN_SINGKAT
  BENAR_SALAH
}

enum KATEGORI_SUBTEST {
  TES_POTENSI_SKOLASTIK
  TES_LITERASI_BAHASA
  PENALARAN_MATEMATIKA
}

enum SUBTEST_TYPE {
  PU  // Penalaran Umum
  PPU // Pengetahuan dan Pemahaman Umum
  PBM // Pemahaman Bacaan dan Menulis
  PK  // Pengetahuan Kuantitatif
  LBI // Literasi Bahasa Indonesia
  LBE // Literasi Bahasa Inggris
  PM  // Penalaran Matematika
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt

  sessions      Session[]
  accounts      Account[]
  TryoutAttempt TryoutAttempt[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  isPremium     Boolean         @default(false)
  tryoutAttempt TryoutAttempt[]

  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Tryout {
  id          String   @id @default(cuid())
  name        String
  year        Int
  publishedAt DateTime
  closedAt    DateTime
  isClosed    Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  soal          Soal[]
  subtest       Subtest[]
  tryoutAttempt TryoutAttempt[]

  @@map("tryout")
}

model Subtest {
  id              String            @id @default(cuid())
  name            String
  type            SUBTEST_TYPE
  kategori        KATEGORI_SUBTEST
  duration        Int
  questionCount   Int               @default(0) // Number of questions for this subtest
  tryoutId        String
  tryout          Tryout            @relation(fields: [tryoutId], references: [id], onDelete: Cascade)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @default(now()) @updatedAt

  soal           Soal[]
  subtestAttempt SubtestAttempt[]

  @@map("subtest")
}

model Soal {
  id        String    @id @default(cuid())
  tryoutId  String
  tryout    Tryout    @relation(fields: [tryoutId], references: [id], onDelete: Cascade)
  subtestId String
  subtest   Subtest   @relation(fields: [subtestId], references: [id], onDelete: Cascade)
  tipeSoal  TIPE_SOAL
  question  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt

  opsi           Opsi[]
  pembahasanSoal PembahasanSoal?
  soalAttempts   SoalAttempt[]

  @@map("soal")
}

model Opsi {
  id        String   @id @default(cuid())
  soalId    String
  soal      Soal     @relation(fields: [soalId], references: [id], onDelete: Cascade)
  teks      String
  isCorrect Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("opsi")
}

model PembahasanSoal {
  id         String   @id @default(cuid())
  soalId     String   @unique
  soal       Soal     @relation(fields: [soalId], references: [id], onDelete: Cascade)
  pembahasan String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("pembahasan_soal")
}

model TryoutAttempt {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tryoutId  String
  tryout    Tryout   @relation(fields: [tryoutId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  accountId String
  account   Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  subtestAttempt SubtestAttempt[]
  soalAttempt    SoalAttempt[]

  rawScore    Int?
  scaledScore Int?
  isFinished  Boolean   @default(false)
  startedAt   DateTime  @default(now())
  finishedAt  DateTime?

  @@map("tryout_attempt")
}

model SubtestAttempt {
  id         String        @id @default(cuid())
  attemptId  String
  attempt    TryoutAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  subtestId  String
  subtest    Subtest       @relation(fields: [subtestId], references: [id], onDelete: Cascade)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  startedAt  DateTime      @default(now())
  finishedAt DateTime?
  expiresAt  DateTime?
  isFinished Boolean       @default(false)

  soalAttempt SoalAttempt[]

  @@unique([attemptId, subtestId])
  @@map("subtest_attempt")
}

model SoalAttempt {
  id               String         @id @default(cuid())
  tryoutAttemptId  String
  tryoutAttempt    TryoutAttempt  @relation(fields: [tryoutAttemptId], references: [id], onDelete: Cascade)
  subtestAttemptId String
  subtestAttempt   SubtestAttempt @relation(fields: [subtestAttemptId], references: [id], onDelete: Cascade)
  soalId           String
  soal             Soal           @relation(fields: [soalId], references: [id], onDelete: Cascade)
  jawaban          String?
  isCorrect        Boolean?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@unique([subtestAttemptId, soalId])
  @@map("soal_attempt")
}
