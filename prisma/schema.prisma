generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TIPE_SOAL {
  PILIHAN_GANDA
  ISIAN_SINGKAT
  BENAR_SALAH
}

enum SUBTEST {
  KPU
  PPU
  KMBM
  PK
  LBI
  LBE
  PM
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt

  sessions      Session[]
  accounts      Account[]
  TryoutAttempt TryoutAttempt[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  isPremium     Boolean         @default(false)
  tryoutAttempt TryoutAttempt[]

  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Tryout {
  id          String   @id @default(cuid())
  name        String
  year        Int
  duration    Int
  publishedAt DateTime
  closedAt    DateTime
  isClosed    Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  soal          Soal[]
  tryoutAttempt TryoutAttempt[]

  @@map("tryout")
}

model Soal {
  id          String    @id @default(cuid())
  tryoutId    String
  tryout      Tryout    @relation(fields: [tryoutId], references: [id], onDelete: Cascade)
  subtestType SUBTEST
  tipeSoal    TIPE_SOAL
  question    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  opsi           Opsi[]
  pembahasanSoal PembahasanSoal?
  soalAttempts   SoalAttempt[]

  @@map("soal")
}

model Opsi {
  id        String   @id @default(cuid())
  soalId    String
  soal      Soal     @relation(fields: [soalId], references: [id], onDelete: Cascade)
  teks      String
  isCorrect Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("opsi")
}

model PembahasanSoal {
  id         String   @id @default(cuid())
  soalId     String   @unique
  soal       Soal     @relation(fields: [soalId], references: [id], onDelete: Cascade)
  pembahasan String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("pembahasan_soal")
}

model TryoutAttempt {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tryoutId  String
  tryout    Tryout   @relation(fields: [tryoutId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accountId String
  account   Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  soalAttempt SoalAttempt[]

  rawScore    Int?
  scaledScore Int?
  isFinished  Boolean @default(false)

  @@map("tryout_attempt")
}

model SoalAttempt {
  id              String        @id @default(cuid())
  tryoutAttemptId String
  tryoutAttempt   TryoutAttempt @relation(fields: [tryoutAttemptId], references: [id], onDelete: Cascade)
  soalId          String
  soal            Soal          @relation(fields: [soalId], references: [id], onDelete: Cascade)
  jawaban         String?
  isCorrect       Boolean?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([tryoutAttemptId, soalId])
  @@map("soal_attempt")
}